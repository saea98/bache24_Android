<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bache 1"
            android:id="@+id/textview_no"
            android:textColor="@color/primary"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/valid.report.mts"
            android:id="@+id/textView80"
            android:textColor="@color/text.color.carousel"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edit_mts_repaired"
        android:textColor="@color/text.color"
        android:maxLength="500"
        android:maxLines="2"
        android:textColorHint="@color/text.hint.color"
        android:layout_below="@+id/textView79"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>