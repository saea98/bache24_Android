<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    tools:context="com.cmi.bache24.ui.fragment.ReportStatusDetailFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollview_info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report.address.text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/gray_a" />

                <TextView
                    android:id="@+id/textview_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text.color" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/report.detail.comments.label"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/gray_a" />

                <TextView
                    android:id="@+id/textview_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text.color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageview_picture1"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/input_background"
                        android:scaleType="center"
                        android:src="@drawable/no_foto" />

                    <ImageView
                        android:id="@+id/imageview_picture2"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/input_background"
                        android:scaleType="center"
                        android:src="@drawable/no_foto" />

                    <ImageView
                        android:id="@+id/imageview_picture3"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/input_background"
                        android:scaleType="center"
                        android:src="@drawable/no_foto" />

                    <ImageView
                        android:id="@+id/imageview_picture4"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/input_background"
                        android:scaleType="center"
                        android:src="@drawable/no_foto" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@color/text.hint.color" />

            <LinearLayout
                android:id="@+id/layout_solved_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageview_status_picture"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.25"
                        android:background="@drawable/input_background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/no_foto" />

                    <TextView
                        android:id="@+id/textview_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imageview_status_picture"
                        android:text="@string/report.status.detail.status.label"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/gray_a" />

                    <TextView
                        android:id="@+id/textview_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview_status_label"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/imageview_status_picture"
                        android:text="24/10/15 - 11:15 hrs."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text.color" />

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textview_datetime"
                        android:layout_alignStart="@+id/textview_datetime"
                        android:layout_below="@+id/textview_datetime"
                        android:layout_marginTop="5dp"
                        android:text="@string/report.status.detail.status.label.solved"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/gray_a"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/separator2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@color/text.hint.color" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/report.status.detail.footer.message.solved"
                android:textColor="@color/text.color" />

            <LinearLayout
                android:id="@+id/layout_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <!-- <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="@string/report.detail.contact.label"
                    android:id="@+id/button_apptentive"
                    android:textColor="@color/text.color.white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/button_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp" />-->

                <Button
                    android:id="@+id/button_call"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/button_selector"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/callable.text"
                    android:textColor="@color/text.color.white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_solved_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <!--  <Button
                      android:id="@+id/button_like"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginRight="5dp"
                      android:layout_weight="1"
                      android:background="@drawable/button_selector"
                      android:paddingLeft="20dp"
                      android:paddingRight="20dp"
                      android:text="@string/report.detail.contact.label"
                      android:textColor="@color/text.color.white" />-->

                <Button
                    android:id="@+id/button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/button_selector"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/button.share"
                    android:textColor="@color/text.color.white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_push_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <View
                    android:id="@+id/separator3"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:background="@color/text.hint.color" />

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="@string/report.detail.notifications.text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text.color" />

                <LinearLayout
                    android:id="@+id/layout_pushes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"></LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/push_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/progress_layout"
        layout="@layout/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
