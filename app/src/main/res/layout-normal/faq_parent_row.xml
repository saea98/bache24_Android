<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text.color.white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textview_faq_title"
            android:textColor="@color/gray_a"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/image_arrow_jcon"
            android:layout_toStartOf="@+id/image_arrow_jcon"
            android:layout_marginRight="5dp"
            android:textSize="17sp"
            fontPath="fonts/HelveticaNeueLight.ttf"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_arrow_jcon"
            android:src="@drawable/faq_arrow_down"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View android:id="@+id/separator"
        android:background="@color/primary_dark"
        android:layout_width = "fill_parent"
        android:layout_height="0.5dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
</LinearLayout>